{
    "format_version": "1.21.130",
    "minecraft:block": {
        "description":{
          "identifier": "cosmos:fallen_meteor",
          "states": {
            "cosmos:heat_level": [0, 1]
          },
		  "menu_category": { "category": "items" }
        },
        "components":{
            "minecraft:geometry":{
                "identifier": "geometry.fallen_meteor"
            },
            "minecraft:material_instances": {
                "*": { "texture": "fallen_meteor", "render_method": "opaque"}
            },
            "minecraft:destructible_by_mining": {
                "seconds_to_destroy": 40,
                 "item_specific_speeds": [
                    {
                        "item": "minecraft:netherite_pickaxe",
                        "destroy_speed": 10
                    },
                    {
                        "item": "minecraft:diamond_pickaxe",
                        "destroy_speed": 10
                    }
                ]
            },
            "minecraft:loot": "loot_tables/blocks/fallen_meteor.json",
            "minecraft:collision_box":{
                "origin":[-7, 0, -7],
                "size":[14, 14, 14]
            },
            "minecraft:selection_box":{
                "origin":[-7, 0, -7],
                "size":[14, 14, 14]
            }
        }, 
        "permutations": [
            {
                "condition": "q.block_state('cosmos:heat_level') == 0",
                "components": {
                    "minecraft:material_instances": {
                        "*": { "texture": "fallen_meteor", "render_method": "opaque"}
                    }
                }
            },
            {
                "condition": "q.block_state('cosmos:heat_level') == 1",
                "components": {
                    "minecraft:material_instances": {
                        "*": { "texture": "hot_fallen_meteor", "render_method": "opaque"}
                    },
                    "minecraft:tick": {
                        "interval_range": [1,1]
                    },
                    "cosmos:fallen_meteor": {}
                }
            }
        ]
    }
}