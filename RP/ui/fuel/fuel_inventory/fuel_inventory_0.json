{
    "namespace": "fuel_0",
    
    "interface@machines.dynamic_interface": {
      "$size": ["100%", 130],
      "$content": [
			{ "title": {
				"type": "label",
				"text": "Fuel",
				"color": "$title_text_color",
				"anchor_from": "top_left",
				"anchor_to": "top_left",
				"offset": [ 8, 6]
			}},
      { "fuel_0@fuel_0.fuel_tank": {
          "$index": 0,
          "anchor_from": "top_middle",
          "anchor_to": "top_middle",
          "offset": [ 0, 6 ]
      }},
      { "stored_fuel@machines.item_text": {
          "$index": 1,
          "anchor_from": "top_middle",
          "anchor_to": "top_middle",
          "offset": [ 55, 29 ]
      }}
		]
	},

	"fuel_tank": {
		"type":"panel",
		"size": [ 36, 40 ],
		"controls": [
			{ "tank_back": {
				"type":"image",
				"texture": "textures/ui/cosmos/machines/rocket_tank_back",
				"layer": 1
			}},
			{ "rocket_fluid@machines.specific_slot": {
				"anchor_from": "bottom_left",
				"anchor_to": "bottom_left",
				"offset": [0, -1],
				"layer": 2,
				"controls": [
					{ "unit": {
						"type": "panel",
						"collection_index": "$index",
						"anchor_from": "bottom_left",
						"anchor_to": "bottom_left",
						"size": [0, 1],
						"controls": [
							{ "image": {
								"type": "image",
								"tiled": true,
								"texture": "textures/ui/liquids/fuel",
								"anchor_from": "bottom_left",
								"anchor_to": "bottom_left",
								"size": [35, 38],
								"bindings": "$use_durability",
								"$source": "#data",
								"$target": "#size_binding_y",
								"$visible_if": "(not (#data = 1000))"
							}}
						]
					}}
				]
			}},
			{ "tank_front": {
				"type": "image",
				"texture": "textures/ui/cosmos/machines/rocket_tank_front",
				"layer": 3
			}},
			{ "tank_hover@machines.item_hover": {} }
		]
	}
}

